    <%- include('../partials/nav-bar') -%>
        <section id="showcase-admissons">
            <div class="container-admis">
            <h1>Survey</h1> 
    
            <div id="main-button">
              <button class= "openbtn" onclick="openSidebar()"> &#8592;</button> 
            </div>
    
